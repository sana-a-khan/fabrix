{
  "manifest_version": 3,
  "name": "fabrix",
  "version": "1.0",
  "description": "Scan fashion products for fabric composition and track natural vs synthetic materials.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/leaf_16x16.png",
      "48": "icons/leaf_48x48.png",
      "128": "icons/leaf_128x128.png"
    }
  },
  "icons": {
    "16": "icons/leaf_16x16.png",
    "48": "icons/leaf_48x48.png",
    "128": "icons/leaf_128x128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000"
  }
}